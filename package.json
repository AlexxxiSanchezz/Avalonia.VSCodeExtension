{
  "name": "avalonia.vscode.extension",
  "displayName": "Avalonia.VSCode.Extension",
  "description": "Bring Avalonia Xaml code completion to VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:Avalonia.VSCode.Extension.CreateNewMvvmApp",
    "onCommand:Avalonia.VSCode.Extension.CreateNewAvaloniaApp",
    "onView:avalonia-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "avalonia-sidebar-view": [
        {
          "id": "avalonia-sidebar",
          "name": "Avalonia"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "avalonia-sidebar-view",
          "title": "Avalonia",
          "icon": "media/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "Avalonia.VSCode.Extension.CreateNewMvvmApp",
        "category": "Avalonia",
        "title": "Create Avalonia .NET Core MVVM App"
      },
      {
        "command": "Avalonia.VSCode.Extension.CreateNewAvaloniaApp",
        "category": "Avalonia",
        "title": "Create Avalonia .NET Core App"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "rollup": "rollup -c -w",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "concurrently": "^7.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "rollup": "^2.63.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.45.0",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "typescript": "^4.4.4"
  }
}
